@page "/categories"

<h3>Categorias</h3>

<div class="mb-3">
    <a class="btn btn-sm btn-primary" href="/categories/create">Nueva Categoria</a>
</div>

<GenericList MyList="LCategories">
    <Body>
        <div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center;">
            <input style="width: 400px;" type="text" class="form-control" id="titulo" placeholder="Buscar categoría..."
                   @bind-value="Filter" />
            <button type="button" class="btn btn-outline-primary mx-1" @onclick="ApplyFilterAsync">Filtrar</button>
            <button type="button" class="btn btn-outline-danger" @onclick="CleanFilterAsync">Limpiar</button>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Categoria</th>
                    <th style="width:140px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in LCategories!)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            @*Insertamos dos botones el de editar como un link porque nos debe de llevar a otra pagina y el de Borrar como boton porque solo tiene que ejecutar un comando*@
                            <a href="/categories/edit/@category.Id" class="btn btn-sm btn-warning">Editar</a>
                            <button @onclick=@(() => DeleteAsync(category)) class="btn btn-sm btn-danger">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <Pagination CurrentPage="currentPage"
                    TotalPages="totalPages"
                    SelectedPage="SelectedPageAsync" />
    </Body>
</GenericList>