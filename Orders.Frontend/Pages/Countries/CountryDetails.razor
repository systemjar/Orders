@page "/countries/details/{CountryId:int}"


@if (country is null)
{
    <Loading />
}
else
{
    <div class="card">
        <div class="card-header">
            <span>
                <i class="bi bi-globe-americas" /> @country.Name
                <a class="btn btn-sm btn-primary float-end mx-1" href="/states/create/@country.Id">
                    <i class="bi bi-plus-square" /> Adicionar Departamento
                </a>
                <a class="btn btn-sm btn-success float-end" href="/countries"><i class="bi bi-arrow-left" /> Regresar</a>
            </span>
        </div>
        <div class="card-body">
            <GenericList MyList="LStates!">
                <Body>
                    <div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center;">
                        <div>
                            <input style="width: 400px;" type="text" class="form-control" id="titulo" placeholder="Buscar
departamento..." @bind-value="Filter" />
                        </div>
                        <div class="mx-1">
                            <button type="button" class="btn btn-outline-primary" @onclick="ApplyFilterAsync">
                                <i class="bi bi-funnel" /> Filtrar </button>
                            <button type="button" class="btn btn-outline-danger" @onclick="CleanFilterAsync">
                                <i class="bi bi-x-circle" /> Limpiar</button>
                        </div>
                    </div>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Departamento</th>
                                <th style="width:90px">Ciudades</th>
                                <th style="width:168px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var state in LStates!)
                            {
                                <tr>
                                    @*<td>@state.Name</td>*@
                                    <td><a href="/states/details/@state.Id">@state.Name</a></td>
                                    <td>@state.CitiesNumber</td>
                                    <td>
                                        @*Insertamos dos botones el de editar como un link porque nos debe de llevar a otra pagina y el de Borrar como boton porque solo tiene que ejecutar un comando
                                        <a class="btn btn-info btn-sm" href="/states/details/@state.Id">Detalles</a>
                                        <a href="/states/edit/@state.Id" class="btn btn-warning btn-sm">Editar</a>
                                        <button class="btn btn-sm btn-danger" @onclick=@(() => DeleteAsync(state))>Borrar</button>*@
                                        <a class="btn btn-warning btn-sm" href="/states/edit/@state.Id">
                                            <i class="bi bi-pencil" />Editar</a>
                                        <button class="btn btn-danger btn-sm" @onclick=@(() => DeleteAsync(state))>
                                            <i class="bi bi-trash" /> Borrar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <Pagination CurrentPage="currentPage"
                                TotalPages="totalPages"
                                SelectedPage="SelectedPageAsync" />
                </Body>
            </GenericList>
        </div>
    </div>
}
